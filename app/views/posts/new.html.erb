				<%= f.label @custom.indulgence_3 %>:
				<%= f.check_box :indulgence_3  %>
			<% end %>
			
			<% if @custom.indulgence_4 != nil %>
				<%= f.label @custom.indulgence_4 %>: 
				<%= f.check_box :indulgence_4  %>
			<% end %>
			
			<% if @custom.indulgence_5 != nil %>
				<%= f.label @custom.indulgence_5 %>:
				<%= f.check_box :indulgence_5  %>
			<% end %>
			<br><br>
		</p>
		<h4> Daily Responsibilities: </h4>
			<p>
			<% if @custom.responsibility_1 != nil %>
				<%= f.label @custom.responsibility_1 %>:
				<%= f.check_box :responsibility_1  %>
			<% end %>
			
			<% if @custom.responsibility_2 != nil %>
				<%= f.label @custom.responsibility_2 %>:
				<%= f.check_box :responsibility_2  %>
			<% end %>
			
			<% if @custom.responsibility_3 != nil %>
				<%= f.label @custom.responsibility_3 %>:
				<%= f.check_box :responsibility_3  %>
			<% end %>
			
			<% if @custom.responsibility_4 != nil %>
				<%= f.label @custom.responsibility_4 %>:
				<%= f.check_box :responsibility_4  %>
			<% end %>
			
			<% if @custom.responsibility_5 != nil %>
				<%= f.label @custom.responsibility_5 %>:
				<%= f.check_box :responsibility_5  %>
			<% end %>
			<br><br>
			</p>
		<h4> Daily Activities: </h4>
			<p>
			<% if @custom.activity_1 != nil %>
				<%= f.label @custom.activity_1 %>:
				<%= f.check_box :activity_1  %>
			<% end %>
			
			<% if @custom.activity_2 != nil %>
				<%= f.label @custom.activity_2 %>:
				<%= f.check_box :activity_2  %>
			<% end %>
			
			<% if @custom.activity_3 != nil %>
