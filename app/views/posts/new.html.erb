<%= form_for @post do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<div class="customizeForm" class="pure-form pure-form-aligned">
		<p>
			<h4> Required fields </h4>
				<%= f.label :sleep, "Sleep:" %>
				<%= f.check_box :sleep %>

				<%= f.label :water, "Water:" %>
				<%= f.check_box :water  %>

				<%= f.label :breakfast, "Breakfast" %>
				<%= f.check_box :breakfast  %>

				<%= f.label :lunch, "Lunch:" %>
				<%= f.check_box :lunch  %>

				<%= f.label :dinner, "Dinner:" %>
				<%= f.check_box :dinner  %>

				<%= f.label :tv, "TV:" %>
				<%= f.check_box :tv  %>

				<%= f.label :social_media, "Social Media:" %>
				<%= f.check_box :social_media  %>

				<%= f.label :socialization, "Socialization:" %>
				<%= f.check_box :socialization  %>

				<%= f.label :work, "Work:" %>
				<%= f.check_box :work  %>
				
				<br><br>
		</p>

		<h4> Your Daily Indulgences: </h4>
		<p>
			<% if @custom.indulgence_1 != nil %>
				<%= f.label @custom.indulgence_1 %>:
				<%= f.check_box :indulgence_1  %>
			<% end %>
			
			<% if @custom.indulgence_2 != nil %>
				<%= f.label @custom.indulgence_2 %>:
				<%= f.check_box :indulgence_2  %>
			<% end %>
			
