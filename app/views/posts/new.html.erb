				<%= f.check_box :activity_3  %>
			<% end %>
			
			<% if @custom.activity_4 != nil %>
				<%= f.label @custom.activity_4 %>:
				<%= f.check_box :activity_4  %>
			<% end %>
			
			<% if @custom.activity_5 != nil %>
				<%= f.label @custom.activity_5 %>:
				<%= f.check_box :activity_5  %>
			<% end %>
			<br><br>
			</p>


	<h4>Create Entry</h4>
		<p>
			<%= f.label :content %>:
			<%= f.text_area :content  %>
		</p>
		<br>
		<p>
			<%= f.label :rating %>:
			<%= f.text_field :rating  %>
		</p>
		<br>
		<%= f.submit "Customize My Data" %>
	</div>
<% end %>
