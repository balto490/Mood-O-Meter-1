
<div id="newUserForm">
  <h2 id="newUserTitle">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :firstname, "First Name:" %>   
      <%= f.text_field :firstname, autofocus: true, autocomplete: "off" %>
      <br>
      <%= f.label :lastname, "Last Name:" %>
      <%= f.text_field :lastname, autofocus: true, autocomplete: "off" %>
      <br>
      <%= f.label :email, "Email:" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
      <br>
      <%= f.label :gender, "Gender:" %>
      <%= f.text_field :gender, autofocus: true, autocomplete: "off" %>
      <br>
      <%= f.label :dob, "Date of Birth:" %>
      <%= f.text_field :dob, autofocus: true, autocomplete: "off" %>
      <br>
      <%= f.label :password, "Password:" %> 
      <% password_options =  @minimum_password_length ? {:placeholder => "#{@minimum_password_length} characters minimum" } : {} %>
      <%= f.password_field :password, password_options.merge(autocomplete: "off")  %>
      <br>
      <%= f.label :password_confirmation, "Confirm Password:", :id => "pwordCon" %>
     <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <br>
  </div>
  <br>
  <div class="actions">
     <%= f.submit "Sign up" %>
  </div>
  <% end %>
  <br>
  <div id="alreadyMember">
    <h5> Already a member?</h5>
        <%= render "devise/shared/links" %>
  </div>
</div>

