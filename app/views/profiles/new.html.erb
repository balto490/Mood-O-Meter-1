        </div>
        <div class="pure-control-group">
        <%= f.label :indulgence_2, "Indulgence 2:" %>
        <%= f.text_field :indulgence_2, autofocus: true, placeholder: 'ex: alcohol' %> <br>
        </div>
        <div class="pure-control-group">
        <%= f.label :indulgence_3, "Indulgence 3:" %>
        <%= f.text_field :indulgence_3, autofocus: true, placeholder: 'ex: big meal' %> <br>
        </div>
        <div class="pure-control-group">
        <%= f.label :indulgence_4, "Indulgence 4:" %>
        <%= f.text_field :indulgence_4, autofocus: true, placeholder: 'ex: drugs' %> <br>
        </div>
        <div class="pure-control-group">
        <%= f.label :indulgence_5, "Indulgence 5:" %>
        <%= f.text_field :indulgence_5, autofocus: true, placeholder: 'ex: video games' %> <br>
        </div>
    </fieldset>
